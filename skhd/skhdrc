# toggle yabai padding
cmd + alt - p : yabai -m space --toggle gap; yabai -m space --toggle padding; yabai -m window --toggle border

# swap windows
alt + shift - up : yabai -m window --warp north
alt + shift - down : yabai -m window --warp south
alt + shift - left : yabai -m window --warp west
alt + shift - right : yabai -m window --warp east

# focus windows
cmd + shift - up : yabai -m window --focus north
cmd + shift - down : yabai -m window --focus south
cmd + shift - left : yabai -m window --focus west
cmd + shift - right : yabai -m window --focus east

# increase window size
# small steps
shift + alt - w : yabai -m window --resize top:0:-20
shift + alt - a : yabai -m window --resize left:-20:0
shift + alt - s : yabai -m window --resize bottom:0:20
shift + alt - d : yabai -m window --resize right:20:0
# large steps
hyper + shift - w : yabai -m window --resize top:0:-140
hyper + shift - a : yabai -m window --resize left:-140:0
hyper + shift - s : yabai -m window --resize bottom:0:140
hyper + shift - d : yabai -m window --resize right:140:0

# send window to next and prev spaces
alt - left : yabai -m window --space prev
alt - right : yabai -m window --space next

# send windows to specific space
cmd + alt - 1 : yabai -m window --space 1
cmd + alt - 2 : yabai -m window --space 2
cmd + alt - 3 : yabai -m window --space 3
cmd + alt - 4 : yabai -m window --space 4
cmd + alt - 5 : yabai -m window --space 5
cmd + alt - 6 : yabai -m window --space 6
cmd + alt - 7 : yabai -m window --space 7
cmd + alt - 8 : yabai -m window --space 8
cmd + alt - 9 : yabai -m window --space 9

# move window
# small steps
ctrl - h : yabai -m window --move rel:-20:0
ctrl - j : yabai -m window --move rel:0:20
ctrl - k : yabai -m window --move rel:0:-20
ctrl - l : yabai -m window --move rel:20:0
# large steps
ctrl + alt - h : yabai -m window --move rel:-140:0
ctrl + alt - j : yabai -m window --move rel:0:140
ctrl + alt - k : yabai -m window --move rel:0:-140
ctrl + alt - l : yabai -m window --move rel:140:0

# rotate tree 90
hyper - r : yabai -m space --rotate 90

# decrease window size
# small steps
shift + cmd - h : yabai -m window --resize left:20:0
shift + cmd - j : yabai -m window --resize bottom:0:-20
shift + cmd - k : yabai -m window --resize top:0:20
shift + cmd - l : yabai -m window --resize right:-20:0
# large steps
shift + ctrl - h : yabai -m window --resize left:140:0
shift + ctrl - j : yabai -m window --resize bottom:0:-140
shift + ctrl - k : yabai -m window --resize top:0:140
shift + ctrl - l : yabai -m window --resize right:-140:0

# toggle borders
cmd + alt - b : yabai -m window --toggle border

# flip apps
hyper - 4 : yabai -m space --mirror y-axis

# toggle window fullscreen
hyper - f : yabai -m window --toggle zoom-fullscreen

# float/unfloat window and certer on screen
alt - t : yabai -m window --toggle float;\

# toggle window split type
alt - e : yabai -m window --toggle split

# restart yabai
alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

