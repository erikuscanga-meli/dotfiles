# toggle yabai padding
cmd + alt - p : yabai -m space --toggle gap; yabai -m space --toggle padding; yabai -m window --toggle border

# swap managed window
ctrl + cmd + alt + shift - k : yabai -m window --swap north
ctrl + cmd + alt + shift - j : yabai -m window --swap south
ctrl + cmd + alt + shift - h : yabai -m window --swap west
ctrl + cmd + alt + shift - l : yabai -m window --swap east

# balance size of windows
ctrl + cmd + alt + shift - b : yabai -m space --balance

# increase window size
shift + alt - left : yabai -m window --resize left:-20:0
shift + alt - up : yabai -m window --resize top:0:-20
shift + alt - down : yabai -m window --resize bottom:0:20
shift + alt - right : yabai -m window --resize right:20:0

# decrease window size
shift + cmd - left : yabai -m window --resize left:0:20
shift + cmd - up : yabai -m window --resize top:0:20
shift + cmd - down : yabai -m window --resize bottom:0:-20
shift + cmd - right : yabai -m window --resize right:-20:0

# float / unfloat window and center on screen
ctrl + cmd + alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle window zoom
ctrl + cmd + alt + shift - f : yabai -m window --toggle zoom-fullscreen
ctrl + cmd + alt + shift - p : yabai -m window --toggle zoom-parent

# toggle window split type
ctrl + cmd + alt + shift - e : yabai -m window --toggle split

# toggle borders
cmd + alt - b : yabai -m window --toggle border

# rotate tree 90
ctrl + cmd + alt + shift - r : yabai -m space --rotate 90

# send window to desktop
ctrl + cmd + alt + shift - 1 : yabai -m window --space 1
ctrl + cmd + alt + shift - 2 : yabai -m window --space 2
ctrl + cmd + alt + shift - 3 : yabai -m window --space 3
ctrl + cmd + alt + shift - 4 : yabai -m window --space 4
ctrl + cmd + alt + shift - 5 : yabai -m window --space 5
ctrl + cmd + alt + shift - 6 : yabai -m window --space 6

# focus windows
ctrl + cmd + alt + shift - up : yabai -m window --focus north
ctrl + cmd + alt + shift - left : yabai -m window --focus west
ctrl + cmd + alt + shift - right : yabai -m window --focus east
ctrl + cmd + alt + shift - down : yabai -m window --focus south

ctrl + cmd + alt + shift - y : yabai -m window --focus prev
ctrl + cmd + alt + shift - u : yabai -m window --focus next

# focus monitor
shift + cmd - j : yabai -m display --focus prev
shift + cmd - k : yabai -m display --focus next
